{% extends "base.njk" %}

{% block titulo %}Paciente | Nuevo{% endblock %}

{% block contenido %}

    <h1>Inserción de nuevo paciente</h1>

    <form action="/patients" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Nombre:</label>
                <input type="text" class="form-control" name="name" 
                placeholder="Nombre">
            
        </div>
        <div class="form-group">
            <label>Apellido: </label>
                <input type="text" class="form-control" name="surname"
                placeholder="Apellido">
           
        </div>
        <div class="form-group">
            <label>Fecha de nacimiento:</label>
                <input type="Date" class="form-control" name="birthDate"
                placeholder="Fecha de nacimiento del paciente">
            
        </div>
        <div class="form-group">
            <label>Dirección:</label>
                <input type="text" class="form-control" name="address"
                placeholder="Dirección">
            
        </div>
        <div class="form-group">
            <label>Número de la seguridad social:</label>
                <input type="text" class="form-control" name="insuranceNumber"
                placeholder="Número de la SS">
            
        </div>
        <div class="form-group">
            <label>Imagen:</label>
                <input type="File" class="form-control" name="image"
                placeholder="imagen">
            
        </div>
        <div class="form-group">
            <label>Login: </label>
                <input type="text" class="form-control" name="login"
                placeholder="login">
           
            <div class="form-group">
            <label>Password:</label>
                <input type="Password" class="form-control" name="password"
                placeholder="Password">
            
        </div>
        </div>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button>
    </form>

{% endblock %}